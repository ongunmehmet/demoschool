
public class Main {
	
	public static void createStarTree(int size) {
		int height=size;
		if(height == 1)
		System.out.println("Hight must ber bigger than 1");
		else
		{
			for(int i=0;i<size;i++)
			{
				for(int j=0;j<size-i;j++) 
					System.out.print(" ");
				for(int k=0;k<(2*size+1);k++)
					System.out.print("*");
				
				
			System.out.println();	
			}
			
		}
	}
	public static void main(String[] args) {
		createStarTree(3);


	}

}
